<p id="notice"><%= notice %></p>

<h1>Listing Ngos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>Email</th>
      <th>Description</th>
      <th>Webpage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ngos.each do |ngo| %>
      <tr>
        <td><%= ngo.name %></td>
        <td><%= ngo.logo %></td>
        <td><%= ngo.email %></td>
        <td><%= ngo.description %></td>
        <td><%= ngo.webpage %></td>
        <td><%= link_to 'Show', admin_ngo_path(ngo) %></td>
        <td><%= link_to 'Edit', edit_admin_ngo_path(ngo) %></td>
        <td><%= link_to 'Destroy', admin_ngo_path(ngo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

