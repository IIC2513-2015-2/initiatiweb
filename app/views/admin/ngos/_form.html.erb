<%= form_for(@ngo, url: @ngo.new_record? ? admin_ngos_path : admin_ngo_path(@ngo), html: {multipart: true}) do |f| %>
  <% if @ngo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ngo.errors.count, "error") %> prohibited this ngo from being saved:</h2>

      <ul>
      <% @ngo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :logo %><br>
    <%= f.file_field :logo %>
