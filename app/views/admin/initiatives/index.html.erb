<p id="notice"><%= notice %></p>

<h1>Listing Initiatives</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Active</th>
      <th>Hashtag</th>
      <th>Ngo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @initiatives.each do |initiative| %>
      <tr>
        <td><%= initiative.title %></td>
        <td><%= initiative.description %></td>
        <td><%= initiative.image %></td>
        <td><%= initiative.active %></td>
        <td><%= initiative.hashtag %></td>
        <td><%= link_to initiative.ngo.name, admin_ngo_path(initiative.ngo) %></td>
        <td><%= link_to 'Show', admin_initiative_path(initiative) %></td>
        <td><%= link_to 'Edit', edit_admin_initiative_path(initiative) %></td>
        <td><%= link_to 'Destroy', admin_initiative_path(initiative), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

